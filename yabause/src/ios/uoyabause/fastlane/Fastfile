default_platform(:ios)



platform :ios do

  
  desc "Generate new localized screenshots for all targets"
  lane :screenshots_all do
    [
      { 
        scheme: "YabaSnashiro-Lite",
        devices: [
            "iPhone 15",
            "iPhone 8 Plus",    
            "iPad Pro 13-inch (M4)",
            "iPad Pro (12.9-inch) (6th generation)"
